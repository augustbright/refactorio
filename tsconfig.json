{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"]
      },
    },
    // "include": [
    //   "next-env.d.ts",
    //   "**/*.ts",
    //   "**/*.tsx",
    // ],
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }