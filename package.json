{
  "scripts": {
    "prettify": "yarn workspaces run prettier . --write",
    "lint": "yarn workspaces run eslint .",
    "lint:fix": "yarn workspaces run eslint . --fix",
    "test": "yarn workspaces run test",
    "checkTypes": "yarn workspaces run tsc --noEmit --project tsconfig.json",
    "prepare": "husky install"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.0"
  },
  "resolutions": {
    "minimist": "0.2.4",
    "minimatch": "3.1.2"
  }
}