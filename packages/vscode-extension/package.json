{
  "name": "@refactorio/vscode-extension",
  "displayName": "Refactorio",
  "publisher": "augustbright",
  "description": "Refactorio language support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "main": "./dist/src/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "refactorio",
        "aliases": [
          "Refactorio",
          "refactorio"
        ],
        "extensions": [
          ".rf.io",
          "rfio"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "refactorio",
        "scopeName": "source.refactorio",
        "path": "./syntaxes/refactorio.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "refactorio.evaluateScript",
        "title": "Refactorio: Evaluate this script"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "refactorio.evaluateScript",
          "when": "editorLangId == refactorio",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "prettify": "prettier . --write",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "checkTypes": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "@refactorio/engine": "1.0.0",
    "globals": "^15.8.0",
    "vscode": "^1.1.37"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
