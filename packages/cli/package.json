{
  "name": "@refactorio/cli",
  "description": "CLI for Refactorio",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "checkTypes": "tsc --noEmit",
    "build": "tsc -p ./ --project tsconfig.build.json",
    "start": "node ./dist --default-dir ./tests/mocks",
    "build-and-run": "npm run build && npm run start",
    "test": "jest"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@refactorio/engine": "1.0.0",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "jotai": "^2.9.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3",
    "react-router": "^6.26.0",
    "type-fest": "^4.24.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,json,css,md}": [
      "prettier --write '**/*.{js,ts,json,css,md}' --ignore-path .prettierignore",
      "eslint --fix"
    ]
  }
}
